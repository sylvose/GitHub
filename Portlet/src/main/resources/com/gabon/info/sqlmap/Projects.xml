<sqlMap projectspace="Projects">

    <typeAlias alias="Map" type="java.util.Map" />
	<typeAlias alias="Projects" type="com.gabon.info.model.projects.Projects" />
	
	
    <parameterMap id="parameterMap-save-Projects" class="Map">
